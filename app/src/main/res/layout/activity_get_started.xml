<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:padding="20dp"
    android:gravity="center"
    android:background="@color/secondary"
    tools:context=".GetStartedActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ciImage"
        android:layout_width="300dp"
        android:layout_height="200dp"
        app:civ_border_color="@color/white"
        app:civ_border_width="5dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_login"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:text="Movie Colabs."
        android:layout_below="@+id/ciImage"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="35sp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDesc"
        android:fontFamily="@font/poppins_medium"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/grey"
        android:text="Collaborating project for Task from Android Class Binar Academy Chapter 5 to make Movie App with implement Retrofit and authentication."
        android:layout_below="@+id/tvTittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"/>

    <RelativeLayout
        android:id="@+id/rlGetStarted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bg"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/tvDesc">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_bg"
            android:fontFamily="@font/poppins_medium"
            android:text="Get Started"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_arrow_forward_ios" />

    </RelativeLayout>

</RelativeLayout>